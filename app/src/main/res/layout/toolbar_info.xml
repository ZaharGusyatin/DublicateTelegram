<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_height="?attr/actionBarSize">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_chat_photo"
        android:layout_width="@dimen/settings_user_changephoto_width"
        android:layout_height="@dimen/settings_user_changephoto_height"
        android:src="@drawable/phro_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_chat_fullname"
        style="@style/normalText"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@+id/single_chat_photo"
        app:layout_constraintTop_toTopOf="@+id/single_chat_photo"
        tools:text="ura petrov" />

    <TextView
        style="@style/smallText"
        android:id="@+id/single_chat_status"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@+id/single_chat_photo"
        app:layout_constraintTop_toBottomOf="@+id/single_chat_fullname"
        tools:text="в сети" />
</androidx.constraintlayout.widget.ConstraintLayout>