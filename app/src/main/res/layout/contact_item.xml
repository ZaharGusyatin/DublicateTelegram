<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/settingsButtons"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_photo"
        android:layout_width="@dimen/settings_user_changephoto_width"
        android:layout_height="@dimen/settings_user_changephoto_height"
        android:src="@drawable/phro_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_fullname"
        style="@style/normalText"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@+id/contact_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ura petrov" />

    <TextView
        style="@style/smallText"
        android:id="@+id/contact_status"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@+id/contact_photo"
        app:layout_constraintTop_toBottomOf="@+id/contact_fullname"
        tools:text="в сети" />


</androidx.constraintlayout.widget.ConstraintLayout>